require 'pp'
require 'rubygems'
require 'openshift-origin-node/model/application_container'
require 'openshift-origin-node/utils/node_logger'
require 'openshift-origin-node/utils/environ'
name="#{__FILE__}"

if(ARGV[1]=="started")
  container_id = ARGV[0]
  user = Etc.getpwnam(container_id)
  container_dir = user.dir
  Process.daemon

  gear_env = ::OpenShift::Runtime::Utils::Environ.for_gear(container_dir)
  container = OpenShift::Runtime::ApplicationContainer.new(gear_env['OPENSHIFT_APP_UUID'],
      gear_env['OPENSHIFT_GEAR_UUID'], user.uid, gear_env['OPENSHIFT_APP_NAME'], gear_env['OPENSHIFT_GEAR_NAME'],
      gear_env['OPENSHIFT_NAMESPACE'])

  sleep 3
  container.container_plugin.post_start
end